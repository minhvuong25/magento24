<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="tigren_customer_group_catalog_rule" resource="default" engine="innodb"
           comment="Tigren Customer Group Rule">
        <column xsi:type="int" name="rule_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Rule Id"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="varchar" name="customer_group_id" length="255" nullable="false"
                comment="Customer Group Id"/>
        <column xsi:type="varchar" name="store_id" length="255" nullable="false"
                comment="Store Id"/>
        <column xsi:type="text" name="products" nullable="false" comment="Products"/>
        <column xsi:type="text" name="discount_amount" nullable="false" comment="Discount Amount"/>
        <column xsi:type="date" name="from_date" comment="Start Time"/>
        <column xsi:type="date" name="to_date" comment="End Time"/>
        <column xsi:type="int" name="priority" padding="11" unsigned="false" nullable="false" identity="false"
                default="0" comment="Priority of the Rule"/>
        <column xsi:type="boolean" name="is_active" nullable="false" default="true" comment="Is Active"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="rule_id"/>
        </constraint>
    </table>


    <table name="tigren_customer_group_catalog_history" resource="default" engine="innodb"
           comment="tigren_customer_group_catalog_history">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false"
                comment="Entity Id"/>
        <column xsi:type="int" name="order_id" nullable="false" padding="10" comment="Order ID"/>
        <column xsi:type="int" name="customer_id" padding="5" unsigned="true" nullable="false"
                default="0" comment="Customer Id"/>
        <column xsi:type="int" name="rule_id" nullable="false" comment="Rule ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="rule_id"/>
        </constraint>
    </table>
</schema>
